<launch>
    <include file="$(find lidar)/launch/b1.launch">
      <arg name="hardware_enable" value="false" />
      <arg name="mode" value="0" />
    </include>

    <node pkg="rosbag" type="play" name="player" output="log" args="$(find car_model)/../bags/lidar_2020-11-27_c1_raw.bag -l" />

    <test name="publishtest" test-name="publishtest" pkg="rostest" type="publishtest">
        <rosparam>
            topics:
                - name: /LidarAll
                  timeout: 60
                  negative: False
                - name: /LidarDetection
                  timeout: 60
                  negative: False
                - name: /LidarFrontTop/Raw/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontTop/Compressed/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontRight/Raw/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontRight/Compressed/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontLeft/Raw/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontLeft/Compressed/heartbeat
                  timeout: 60
                  negative: False
        </rosparam>
    </test>
</launch>
