<launch>
    <include file="$(find lidar)/launch/b1.launch">
      <arg name="mode" value="9" />
      <arg name="hardware_enable" value="false" />
      <arg name="use_compress" value="false" />
    </include>

    <node pkg="rosbag" type="play" name="player" output="log" args="$(find car_model)/../bags/raw_compressed_2021-01-12-16-01-42.bag -l" />

    <test name="publishtest" test-name="publishtest" pkg="rostest" type="publishtest">
        <rosparam>
            topics:
                - name: /LidarAll
                  timeout: 60
                  negative: False
                - name: /LidarDetection
                  timeout: 60
                  negative: False
                - name: /LidarDetection/Car
                  timeout: 60
                  negative: False
                - name: /LidarDetection/Ped_Cyc
                  timeout: 60
                  negative: False
                - name: /LidarFrontTop/Raw/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontRight/Raw/heartbeat
                  timeout: 60
                  negative: False
                - name: /LidarFrontLeft/Raw/heartbeat
                  timeout: 60
                  negative: False
        </rosparam>
    </test>
</launch>
