<launch>
    <include file="$(find itri_pedcross)/launch/ped.launch">
    </include>

    <node pkg="rosbag" type="play" name="player" output="log" args="$(find car_model)/../bags/auto_record_2020-04-14-16-41-15_89.bag /PedCross/3D_marker:=/PedCross/3D_marker_bak /PedCross/Alert:=/PedCross/Alert_bak /PedCross/Pedestrians:=/PedCross/Pedestrians_bak" />

    <test name="publishtest" test-name="publishtest" pkg="rostest" type="publishtest">
        <rosparam>
            topics:
                - name: /PedCross/Alert
                  timeout: 15
                  negative: False
                - name: /PedCross/DrawBBox
                  timeout: 15
                  negative: False
                - name: /PedCross/3D_marker
                  timeout: 15
                  negative: False
        </rosparam>
    </test>
</launch>
